{
    "name": "lifetimed",
    "type": "module",
    "version": "0.1.0",
    "description": "Lifetimed is a JavaScript library for simplifying the management of disposable resources",
    "packageManager": "npm@10.9.2",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "vitest run",
        "lint": "npx eslint .",
        "prettier:check": "npx prettier . --check",
        "prettier:write": "npx prettier . --write",
        "clean-dist": "node scripts/clean-dist.cjs",
        "clean-temp": "node scripts/clean-temp.cjs",
        "build": "npm run prettier:check && npm run lint && npm test && npm run clean-dist && npx rollup -c && npm run clean-temp"
    },
    "author": "CodeWriter",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vanifatovvlad/lifetimed.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@rollup/plugin-typescript": "^12.1.4",
        "eslint": "^9.31.0",
        "prettier": "3.6.2",
        "rollup": "^4.46.0",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.36.0",
        "vitest": "^3.2.4"
    }
}
